{
  "name": "uber-weekly-reporter",
  "version": "1.0.0",
  "description": "Automated weekly earnings report generation for Uber drivers",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env DEBUG_RANGE=1 electron .",
    "debug": "DEBUG_RANGE=1 electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "prepare:pw": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 npx playwright install chromium",
    "dist:win": "electron-builder --win nsis portable"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.uberreporter.app",
    "productName": "Uber Weekly Reporter",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "secure-store.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/playwright/.local-browsers",
        "to": "playwright-browsers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "shortcutName": "Uber Weekly Reporter"
    }
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "playwright": "^1.55.0",
    "puppeteer": "^24.19.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.3.0",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
